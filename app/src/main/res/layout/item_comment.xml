<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/gap_standard_16dp">

    <TextView
        android:id="@+id/tv_comm_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_available"
        android:textSize="@dimen/minor_14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="13.04.2020 12:23" />

    <TextView
        android:id="@+id/tv_comm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_quarter_4dp"
        android:text="@string/not_available"
        android:textSize="@dimen/major_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_comm_date"
        tools:text="Так много вопросов, и так мало ответов..." />

    <TextView
        android:id="@+id/tv_comm_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_quarter_4dp"
        android:text="@string/not_available"
        android:textSize="@dimen/minor_14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_comm_text"
        tools:text="author: udav2alex" />

    <TextView
        android:id="@+id/tv_comm_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_available"
        android:textSize="@dimen/minor_14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_comm_author"
        tools:text="rating: -12" />

</androidx.constraintlayout.widget.ConstraintLayout>